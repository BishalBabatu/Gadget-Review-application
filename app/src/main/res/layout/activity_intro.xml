<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg2"
    android:padding="16dp"
    tools:context=".ui.activities.IntroActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/audiowide"
        android:letterSpacing="0.1"
        android:paddingBottom="16dp"
        android:text="GADGETRATE"
        android:textColor="@color/white"
        android:textSize="42dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/introImage"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/img_20240523_wa0017"
        android:contentDescription="@string/intro_image_desc"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/introParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/audiowide"
        android:paddingBottom="16dp"
        android:text="Welcome to GADGEETRATE, the ultimate app for gadget lovers!Welcome to GADGEETRATE, the ultimate app for gadget lovers!
Welcome to GADGEETRATE, the ultimate app for gadget lovers!
Welcome to GADGEETRATE, the ultimate app for gadget lovers!
Welcome to GADGEETRATE, the ultimate app for gadget lovers!
"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/audiowide"
        android:text="Get Started" />
</LinearLayout>
